var sys  = require('sys');

BruteForce = function() {
	var _this = this;
	var _time = 30;
	var _max_tries = 4;
	var _connections = {};
	
	var _reset = function(ip){
		_connectoins[ip]['tries'] = 1;
		_connections[ip]['timestamp'] = new Date().now();
	};

	var _addConnection = function(ip){
		if (_connections[ip]) {
			sys.log('Increase ' + ip);
			_connections[ip]['tries'] += 1;
		} else {
			sys.log('Add ' + ip + ' to connections');
			_connections[ip] = {'tries': 1, 'timestamp': new Date().now()};
		}
		sys.log(_connections[ip]);
	};
	
	this.check = function(ip){
		sys.log('BruteForce check ...');
		
		if (_connections[ip])  {
			tries = _connections[ip]['tries'];
			time  = _connections[ip]['timestamp'];
			now   = new Date().now();
			
			too_much = tries >= _max_tries;
			in_time  = time < _time * 1000 + now; 
			
			if (too_much && in_time){
				sys.log('IP: ' + ip + ' blocked because of too many requests');
				return true;
			} else if(!in_time) {
				sys.log('Reset counter for IP :' + ip);
				_reset(ip);
			} else {
				_addConnection(ip);
			} 
		} else{
			_addConnection(ip);
		}
	};
};
exports.BruteForce = BruteForce;