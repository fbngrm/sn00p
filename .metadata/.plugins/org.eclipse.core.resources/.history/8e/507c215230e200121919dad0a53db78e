var winston = require('winston');
var conf = require('../conf/config.js');


var Logger = function(){

	var _getDate = function(){
		var d = new Date();
	    var curr_date = d.getDate();
	    var curr_month = d.getMonth() + 1; //Months are zero based
	    var curr_year = d.getFullYear();
	    var hour = d.getHour();
	    var hour = d.getMinute();
	    var hour = d.getSecond();
	    
	    return curr_date + "-" + curr_month + "-" + curr_year;
	};

	var default_ = {
			console: {
				level:"info", 
				colorize: 'true', 
				timestamp: function(){return 'now'}
			},
			file: {
				filename:"../../log/server.log", 
				level:"debug"
			}
	};
	
	var logging  = conf.logging || default_ ;
	
	return new winston.Logger({
	    transports: [
	      new (winston.transports.Console)(logging.console),
	      new (winston.transports.File)(logging.file)
	    ]
	});
}

exports.Logger = Logger;