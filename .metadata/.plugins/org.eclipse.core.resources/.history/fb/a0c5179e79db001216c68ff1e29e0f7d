# The shell to use for script execution
SHELL := /bin/bash

# The project's root directory
ROOT_DIR := $(shell echo ${PWD})
NODE_MODULES := $(ROOT_DIR)/node_modules

################# TARGETS ######################################################

# Forces the installation of the dependencies
install-deps-clean:
	$(VERBOSE)echo installing dependencies in $(NODE_MODULES)
	$(VERBOSE)rm -R -f $(NODE_MODULES)
	$(VERBOSE)touch $(NODE_MODULES)
	$(VERBOSE)(cd $(NODE_MODULES) && npm-install)
	

.PHONY: install-deps-clean