{
	"logging": {
		"console" : {
			"colorize" : true,
			"timestamp" : true,
			"level" : "info"
		},
		"file" : {
			"filename" : "../../log/server.log",
			"json" : false,
			"timestamp" : true,
			"level" : "warn"
        }
	},
	"bruteforce" : {
		"urls" : [
			"/login", 
			"/sign"
			],
		"time" : 30,
		"max_reqs" : 10,
		"free_mem" : 30
	},
	"permissions" : {
		"blacklist" : "./conf/blacklist",
		"whitelist" : "./conf/whitelist",
		"unban" : 30
	},
	"router" : {
		"http" : {
			"localhost" : {
				"hostname" : "localhost",
				"port" : 9000
			}
		}, 
		"https" : {
			"localhost" : {
				"hostname" : "localhost",
				"port" : 9021
			}
		}
	},
	"proxy" : {
		"https" : {
			"port" : 8021,
			"keys" : {
				"key" : "./keys/key.pem",
				"cert" : "./keys/cert.pem"
			}
		},
		"http" : {
			"port" : 8000
		}
	}
}
